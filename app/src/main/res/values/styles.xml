<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Widget.BottomNavigationView"
        parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/dukaan_font_normal</item>
    </style>

    <style name="TextStyleNormal">
        <item name="fontFamily">@font/dukaan_font_normal</item>
    </style>

    <style name="TextStyleBold">
        <item name="fontFamily">@font/dukaan_font_medium</item>
    </style>

    <style name="TextStyleBoldBlack">
        <item name="fontFamily">@font/dukaan_font_medium</item>
        <item name="android:textColor">#1a181e</item>
    </style>

    <style name="TextStyleNormalCaps">
        <item name="fontFamily">@font/dukaan_font_normal</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="TextStyleBoldCaps">
        <item name="fontFamily">@font/dukaan_font_medium</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="TextStyleBoldCapsCen">
        <item name="fontFamily">@font/dukaan_font_medium</item>
        <item name="android:gravity">center</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="TextStyleBoldCapsBlack">
        <item name="fontFamily">@font/dukaan_font_medium</item>
        <item name="android:textColor">#1a181e</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="TextStyleBoldSelected">
        <item name="fontFamily">@font/dukaan_font_medium</item>
        <item name="android:textColor">@color/warm_grey</item>
        <item name="android:gravity">center_vertical</item>
    </style>



</resources>