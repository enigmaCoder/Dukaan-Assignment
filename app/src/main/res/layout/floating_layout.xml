<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="12dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/share_title"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:textSize="14sp"
        style="@style/TextStyleBoldBlack"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Share More to Earn More" />
    <TextView
        android:id="@+id/share_msg"
        android:layout_marginTop="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/TextStyleNormal"
        android:textStyle="normal"
        android:textSize="13sp"
        android:textColor="@color/warm_grey"
        android:lineSpacingExtra="3sp"
        app:layout_constraintTop_toBottomOf="@+id/share_title"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Your customers can visit your online store and place the orders from this link." />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextStyleBold"
            android:textStyle="normal"
            android:textSize="14sp"
            android:autoLink="web"
            android:textColorLink="@color/dustyOrange"
            android:textColor="@color/dustyOrange"
            android:lineSpacingExtra="6sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="@string/share_link" />

        <ImageView
            android:id="@+id/share_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/group_20"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>